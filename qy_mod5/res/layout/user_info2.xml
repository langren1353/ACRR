<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.xxxxx.ac.frame.Fragment3" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:padding="6dp" >

        <ImageView
            android:id="@+id/UserInfoBackBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/left" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:text="个人信息"
            android:textColor="@color/black"
            android:textSize="@dimen/titleTextSize" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/UserInfoCLickHeadIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_view_style_selector"
        android:clickable="true"
        android:gravity="center_vertical"
        android:padding="12dp" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="用户头像" />

        <ImageView
            android:id="@+id/UserInfo_userHeadIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/user_head_new" />

        <ImageView
            android:id="@+id/ImageView09"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/list_view_style_selector"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/LinearLayout01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="12dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" >

                <TextView
                    android:id="@+id/TextView03"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="用户名"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/UserInfoCLickNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@color/white"
                    android:singleLine="true"
                    android:text="喵喵喵"
                    android:textColor="@color/garyPlus"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/UserInfoCLickSex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_view_style_selector"
            android:clickable="true"
            android:gravity="center_vertical"
            android:padding="12dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" >

                <TextView
                    android:id="@+id/TextView04"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="性别"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/UserInfoCLickSexTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:singleLine="true"
                    android:text="男"
                    android:textColor="@color/garyPlus" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ImageView08"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_right" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/UserInfoCLickBirth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_view_style_selector"
            android:clickable="true"
            android:gravity="center_vertical"
            android:padding="12dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" >

                <TextView
                    android:id="@+id/TextView07"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="生日"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/UserInfoCLickBirthTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="1977-01-01"
                    android:textColor="@color/garyPlus" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ImageView07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_right" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/UserInfoCLickDescribe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/list_view_style_selector"
            android:clickable="true"
            android:gravity="center_vertical"
            android:padding="12dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" >

                <TextView
                    android:id="@+id/TextView08"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="个人简介"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/UserInfoCLickDescribeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text=""
                    android:textColor="@color/garyPlus" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ImageView03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_right" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/UserInfoCLickAddr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/list_view_style_selector"
            android:clickable="true"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" >

                <TextView
                    android:id="@+id/TextView10"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="常用地址"
                    android:textColor="@color/black" >

                    <requestFocus />
                </TextView>

                <TextView
                    android:id="@+id/TextView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text=""
                    android:textColor="@color/garyPlus" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ImageView04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_right" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/list_view_style_selector"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/UserInfoCLickChangePwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_view_style_selector"
            android:clickable="true"
            android:gravity="center_vertical"
            android:padding="12dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" >

                <TextView
                    android:id="@+id/TextView09"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="修改密码"
                    android:textColor="@color/black" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_right" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center" >

        <Button
            android:id="@+id/UserInfoCLickQuit"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_margin="12dp"
            android:background="@color/orange"
            android:text="退出登录"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>
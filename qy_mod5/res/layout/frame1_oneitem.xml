<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gooditem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_margin="8dp" >

        <ImageView
            android:id="@+id/frameOneBg"
            android:layout_width="120dp"
            android:layout_height="75dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/fram1_oneitem_pic"
            android:visibility="gone" />

        <TextView
            android:id="@+id/frameOneLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/frameOneTitle"
            android:layout_below="@+id/frameOneTitle"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/frameOneServices"
            android:layout_toStartOf="@+id/frameOneServices"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Location"
            android:textColor="@color/garyPlus" />

        <TextView
            android:id="@+id/frameOneServices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/frameOneLocation"
            android:layout_marginRight="15dp"
            android:singleLine="true"
            android:text="servicesType"
            android:textColor="@color/garyPlus" />

        <TextView
            android:id="@+id/frameOneMoneytext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/frameOneTitle"
            android:layout_below="@+id/frameOneLocation"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:text="moneyText"
            android:textColor="@color/garyPlus"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/frameOneIsRapid"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/fram1_oneitem_rapid"
            android:visibility="visible" />

        <TextView
            android:id="@+id/frameOneFaraway"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            android:singleLine="true"
            android:text="0km"
            android:textColor="@color/garyPlus" />

        <TextView
            android:id="@+id/frameOnePubTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:singleLine="true"
            android:text="pubtime"
            android:textColor="@color/garyPlus"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/frameOneHasFinishedImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/frameOneFaraway"
            android:layout_alignParentLeft="true"
            android:visibility="gone"
            android:src="@null" />

        <TextView
            android:id="@+id/frameOneTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/frameOneHasFinishedImg"
            android:singleLine="true"
            android:text="Title"
            android:textSize="20sp" />

    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/gray" />

</LinearLayout>